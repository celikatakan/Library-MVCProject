@model RegisterViewModel

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg" style="border-radius: 20px;">
            <div class="card-header text-white bg-primary fw-bold fs-4 text-center" style="border-radius: 20px 20px 0 0;">
                Sign-Up Form
            </div>
            <div class="card-body p-4">
                <form method="post" asp-controller="Auth" asp-action="SignUp">

                    <div class="form-floating mb-3">
                        <input asp-for="FullName" type="text" class="form-control" id="floatingFullName" placeholder="Full Name" style="border-radius: 10px;">
                        <label for="floatingFullName">Full Name</label>
                        <span asp-validation-for="FullName" class="text-danger fw-bold mt-1"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" type="email" class="form-control" id="floatingEmail" placeholder="Email address" style="border-radius: 10px;">
                        <label for="floatingEmail">Email address</label>
                        <span asp-validation-for="Email" class="text-danger fw-bold mt-1"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password" style="border-radius: 10px;">
                        <label for="floatingPassword">Password</label>
                        <span asp-validation-for="Password" class="text-danger fw-bold mt-1"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingConfirmPassword" placeholder="Confirm Password" style="border-radius: 10px;">
                        <label for="floatingConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger mt-2 fw-bold"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="PhoneNumber" type="tel" class="form-control" id="floatingPhoneNumber" placeholder="Phone Number" style="border-radius: 10px;">
                        <label for="floatingPhoneNumber">Phone Number</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger fw-bold mt-1"></span>
                    </div>

                    <button class="btn btn-primary w-100 py-2" type="submit" style="border-radius: 50px; background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);">
                        Sign Up
                    </button>

                    <div class="text-center mt-3">
                        <p>Already have an account? <a asp-controller="Auth" asp-action="SignIn" class="fw-bold text-decoration-underline">Sign in here</a>.</p>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

